{
  "contentType": "application/vnd.microsoft.card.adaptive",
  "content": {
    "type": "AdaptiveCard",
    "body": [
      {
        "type": "Input.Text",
        "placeholder": "WISHLIST_UPDATE",
        "isVisible": false,
        "value": "WISHLIST_UPDATE",
        "id": "ATTACHMENT_TYPE",
        "spacing": "None"
      },
      {
        "type": "Input.Text",
        "placeholder": "EMAIL",
        "isVisible": false,
        "value": "${0}",
        "id": "EMAIL",
        "spacing": "None"
      },
      {
        "type": "Input.Text",
        "placeholder": "GROUP_NAME",
        "isVisible": false,
        "value": "${1}",
        "id": "GROUP_NAME",
        "spacing": "None"
      },
      {
        "type": "TextBlock",
        "text": "${2}",
        "wrap": true,
        "spacing": "None"
      },
      {
        "type": "ActionSet",
        "actions": [
          {
            "type": "Action.ShowCard",
            "title": "${3}",
            "card": {
              "type": "AdaptiveCard",
              "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
              "body": [
                {
                  "type": "TextBlock",
                  "text": "${4}",
                  "wrap": true,
                  "spacing": "None"
                },
                {
                  "type": "Input.Text",
                  "id": "LINK",
                  "isMultiline": true,
                  "placeholder": "${5}"
                },
                {
                  "type": "ActionSet",
                  "actions": [
                    {
                      "type": "Action.Submit",
                      "title": "${6}",
                      "data": {
                        "action": "SAVE"
                      }
                    }
                  ],
                  "horizontalAlignment": "Center",
                  "spacing": "None"
                }
              ],
              "version": "1.2"
            }
          },
          {
            "type": "Action.Submit",
            "title": "${7}",
            "data": {
              "action": "DELETE"
            }
          }
        ],
        "spacing": "None",
        "horizontalAlignment": "Center"
      }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2"
  }
}
